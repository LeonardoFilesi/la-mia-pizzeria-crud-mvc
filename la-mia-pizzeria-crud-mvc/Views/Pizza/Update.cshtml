﻿@{
    Layout = "_MioLayout";
}
@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Aggiorna una Pizza esistente</h1>
        </div>
        <form asp-controller="Pizza" asp-action="Update" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()         <!--DA METTERE SEMPRE PER LA SICUREZZA DEL CODICE-->
            <div class="mb-3">
                <strong>Titolo:</strong>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Descrizione:</strong>
                <input type="text" class="form-control" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Prezzo:</strong>
                <input type="number" class="form-control" asp-for="Price" min="0">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>URL Immagine:</strong>
                <input type="text" class="form-control" asp-for="Image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Aggiorna la Pizza</button>
        </form>
    </div>
</div>